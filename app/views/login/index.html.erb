<% unless session[:is_admin] %>
    <h1>Log in</h1>
    <%= form_with scope: :login, url: login_path, local: true do |form| %>
        <p>
            <%= form.label :username %><br>
            <%= form.text_field :username %>
        </p>

        <p>
            <%= form.label :password %><br>
            <%= form.password_field :password%>
        </p>

        <p>
            <%= form.submit :Login %>
        </p>
    <% end %>
<% else %>
    <h1>Logged in!</h1>

    <%= link_to logout_path() do %>Log out<% end %>
<% end %>